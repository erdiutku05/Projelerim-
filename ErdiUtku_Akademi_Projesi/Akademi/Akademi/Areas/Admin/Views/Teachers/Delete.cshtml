@model TeacherViewModel
<h1 class="display-6 mt-2 text-danger">Öğretmen Siliniyor!</h1>
<hr />

<form asp-area="Admin"
      asp-controller="Teachers"
      asp-action="Delete"
      method="post">
    <input type="hidden" asp-for="User.Id" />
    <div class="row">
        <div class="col-9">
            <div class="row">
                <div class="col">
                    <div class="mb-3">
                        <label class="form-label text-danger fw-bold">Adı:</label>
                        <label>@Model.FirstName</label>
                    </div>
                    <div class="mb-3">
                        <label class="form-label text-danger fw-bold">Soyadı</label>
                        <label>@Model.LastName</label>
                    </div>
                    <div class="mb-3">
                        <label class="form-label text-danger fw-bold">Mezuniyet</label>
                        <label>@Model.Graduation</label>
                    </div>
                    <div class="mb-3">
                        <label class="form-label text-danger fw-bold">Telefon Numarası:</label>
                        <label>@Model.Phone</label>
                    </div>

                </div>
                <div class="col">
                    <div class="mb-3">
                        <label class="form-label text-danger fw-bold">Doğum Tarihi:</label>
                        <label>@Model.DateOfBirth</label>
                    </div>
                    <div class="mb-3">
                        <label class="form-label text-danger fw-bold">Şehir:</label>
                        <label>@Model.City</label>
                    </div>
                    <div class="mb-3">
                        <label class="form-label text-danger fw-bold">Onay Durumu:</label>
                        <label>@(Model.IsApproved ? "Onaylı" : "Onaylı değil")</label>
                    </div>
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-2">
                    <img src="~/images/@Model.Image.Url" class="img-thumbnail" width="100" alt="...">
                </div>
            </div>
            <button type="submit" class="btn btn-danger">Sil</button>

        </div>
        <div class="col-3">
            <h5 class="text-danger">Branşlar</h5>
            <ul>
                @foreach (var branch in Model.Branches)
                {
                    <li>@branch.BranchName</li>
                }
            </ul>
        </div>
    </div>

</form>
